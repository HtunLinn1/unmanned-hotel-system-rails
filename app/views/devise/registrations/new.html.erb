<div class="container-fluid" style="background-color: #f0f8ff; padding-bottom: 248px;">
  <div class="row" style="padding-top: 100px;">
    <div class="col-12 d-flex justify-content-center">
      <h2>アカウント作成</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field pb-1">
          <%= f.label :name %>
          <% if !@user.errors.has_key?(:name) %>
            <br>
          <% end %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:name).join(', ') if @user.errors.has_key?(:name) %>
          </div>
        </div>

        <div class="field pb-1">
          <%= f.label :email %>
          <% if !@user.errors.has_key?(:email) %>
            <br>
          <% end %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:email).join(', ') if @user.errors.has_key?(:email) %>
          </div>
        </div>

        <div class="field pb-1">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <% if !@user.errors.has_key?(:password) %>
            <br>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:password).join(', ') if @user.errors.has_key?(:password) %>
          </div>
        </div>

        <div class="field pb-1">
          <%= f.label :password_confirmation %>
          <% if !@user.errors.has_key?(:password_confirmation) %>
            <br>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:password_confirmation).join(', ') if @user.errors.has_key?(:password_confirmation) %>
          </div>
        </div>

        <div class="field pb-1">
          <%= f.label :phone %>
          <% if !@user.errors.has_key?(:phone) %>
            <br>
          <% end %>
          <%= f.text_field :phone, autocomplete: "phone", class: "form-control" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:phone).join(', ') if @user.errors.has_key?(:phone) %>
          </div>
        </div>

        <div class="field pb-1">
          <%= f.hidden_field :staff, id: :staff_checkbox, class: "form-control",:as => :boolean%>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:staff).join(', ') if @user.errors.has_key?(:staff) %>
          </div>
        </div>
        <div class="field pb-1">
          <%= f.label :picture %>
          <% if !@user.errors.has_key?(:picture) %>
            <br>
          <% end %>
          <%= f.file_field :picture, class: "form-control pb-2" %>
          <div class="text-danger">
            <%= @user.errors.full_messages_for(:picture).join(', ') if @user.errors.has_key?(:picture) %>
          </div>
        </div>
        <div class="actions pb-1 text-center">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
