<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "unmanned.jpg", class: "d-block carousel-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "self-checkin.png", class: "d-block carousel-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "bed2.jpg", class: "d-block carousel-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "bed3.jpg", class: "d-block carousel-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "facilities.png", class: "d-block carousel-img" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="d-flex justify-content-center booking-date pt-3 pb-4">
  <div class="container text-center mx-5">
    <div class="row">
      <div class="col-12 text-center">
        <p class="fs-3">Booking Now</p>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-sm-5">
        <label for="date">Check In</label>
        <input type="date" id="datepicker" width="10">
      </div>
      <div class="col-12 col-sm-5">
        <label for="date">Check Out</label>
        <input type="date" id="checkout-date">
      </div>
      <div class="col-12 col-sm-1 pt-1">
        <select class="book-form-control book-adl" name="numadult" data-min-value="1" data-max-value="10" data-default-value="2" data-translate-min="guestSelect" data-translate-other="guestsSelect">
          <option value="1">1 person</option>
          <option value="2">2 people</option>
          <option value="3">3 people</option>
          <option value="4">4 people</option>
        </select>
      </div>
      <div class="col-12 col-sm-1 pt-1">
        <button type="submit" class="book-btn book-btn-success book-btn-block book-size-md book-form-control" data-translate="1">Search</button>
      </div>
    </div>
  </div>
</div>
