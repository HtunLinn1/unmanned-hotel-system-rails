<div class="container-fluid" style="background-color: #f0f8ff; padding-bottom: 395px; padding-top: 100px;">
  <div class="container" style="max-width: 900px;">
    <div class="row pb-3">
      <div class="col-7 d-flex justify-content-center">
        <%= image_tag current_user.picture.url, class: "user-img img-fluid", alt: "room" %>
      </div>
      <div class="col-5">
        <div class="row">
          <div class="col-12 fs-2 pb-3">
            <%= @user.name %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 fs-4 pb-3">
            <b>メール</b>
          </div>
        </div>
        <div class="row">
          <div class="col-12 pb-3">
            <%= @user.email %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 fs-4 pb-3">
            <b>電話</b>
          </div>
        </div>
        <div class="row">
          <div class="col-12 pb-3">
            <%= @user.phone %>
          </div>
        </div>
    <% if !current_user.staff %>
      <div class="row">
        <div class="col-12">
          <%= link_to("更新", "/users/#{@user.id}/edit", class: 'btn btn-primary') %>
          <%= link_to("アカウント削除", "/users/#{@user.id}", class: 'btn btn-danger', method: :delete, data: {confirm: "削除？"}) %>
        </div>
      </div>
    <% end %>
      </div>
    </div>

  </div>
</div>