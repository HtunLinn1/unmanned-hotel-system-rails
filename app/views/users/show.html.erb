<div class="container-fluid" style="background-color: #f0f8ff; padding-bottom: 315px; padding-top: 100px;">
  <div class="container" style="max-width: 900px;">
    <div class="row pb-3">
      <div class="col-4 d-flex justify-content-center">
        <%= image_tag "user.png", class: "user-img img-thumbnail" %>
      </div>
      <div class="col-5">
        <div class="row">
          <div class="col-12 fs-2 pb-3">
            <%= @user.name %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <table class="table">
              <tbody>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @user.phone %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <% if !current_user.staff %>
      <div class="row">
        <div class="col-12">
          <%= link_to("更新", "/users/#{@user.id}/edit", class: 'btn btn-primary') %>
          <%= link_to("アカウント削除", "/users/#{@user.id}", class: 'btn btn-danger', method: :delete, data: {confirm: "削除？"}) %>
        </div>
      </div>
    <% end %>
  </div>
</div>